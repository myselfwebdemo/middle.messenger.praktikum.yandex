<div class="profile">
    {{> component_button
        typeIMG=true
        type="send back-btn"
        btype="button"
        src="back.png"}}



    <div class="profile-icon-wrapper">
        {{> component_image
            class="profile-icon"
            src=""
            alt="your avatar"}}
    </div>
    <h1>user name</h1>
    <div class="paw">
        <form action="#" method="post">
            <div class="ps-lines">
                {{> profileSettingLine
                    trait="Old password"
                    plchldr="Current password"
                    reqInput="true"
                    class="paw-input"
                    id="old_password_input"
                    name="old_password_input"
                    type="password"}}
                {{> profileSettingLine
                    trait="New password"
                    plchldr="New password"
                    reqInput="true"
                    class="paw-input"
                    id="new_password_input"
                    name="new_password_input"
                    type="password"}}
                {{> profileSettingLine
                    trait="New password (again)"
                    plchldr="Confirmation"
                    reqInput="true"
                    class="paw-input"
                    id="new_password_input_confirmation"
                    name="new_password_input_confirmation"
                    type="password"}}
            </div>
            <div class="profile-action">
                {{> component_button
                    type="primary"
                    btype="submit"
                    clientAction="Change password"}}
            </div>
        </form>
    </div>
</div>
